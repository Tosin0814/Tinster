<!DOCTYPE html>
<html>
  <head>
    <title>Tinster Posts</title>
    <!-- Google Icon Fonts used by Materialize -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Materialize CSS Framework -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- Bootstrap CSS Framework-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    
    <!-- JavaScript for Materialize -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!-- JavaScript for Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <nav>
        <a href="/posts" class="brand-logo left">Tinster Posts</a>
        <!-- Add logout UI here -->
        <ul class="right">
            <li><a href="/posts/new">ADD POST</a></li>
            <li><a href="/posts/all">My Posts</a></li>
            <li><a href="/logout"><i class="material-icons left">trending_flat</i>Log Out</a></li>
        </ul>
    </nav>

    <main>
        <% let likesUserIds = [] %>
        <div class="text-center flex-ctr">
        <h3>
          <% if (post.title) { %>
            <%= post.title %>
          <% } else { %>
            Post
          <% } %>
        </h3>
                <div class="post">
                    <ul>
                        <li><%= post.username %></li>
                        <li>
                          <div class="show-image">
                            <img src="<%= post.img %>" alt="Cannot find image">
                            <% post.likes.forEach(like => { %>
                                <% likesUserIds.push(like.userId.toString()) %>
                            <% }) %>
                            <% if (likesUserIds.includes((user._id).toString())) { %>
                                <form name="remove-like-form" action="" method="post">
                                    <button class="liked" type="submit">Liked</button>
                                </form>
                            <% } else { %>
                                <form name="add-like-form" action="/posts/<%= post._id %>/likes" method="POST">
                                    <button class="like" type="submit">Like</button>
                                </form>
                            <% } %>
                          </div>
                        </li>
                        <li><%= post.description %></li>
                        <li>
                          <% if (likesUserIds.length === 1) { %>
                            <%= likesUserIds.length %> Like
                          <% } else { %>
                            <%= likesUserIds.length %> Likes
                          <% } %>
                        </li>
                    </ul>
                    <p> Created on <%= post.createdAt%></p>
                    <div>
                        <h5>Comments</h5>
                        <form id="add-comment-form" action="/posts/<%= post._id %>/comments" method="POST">
                          <input type="text" name="commentText" placeholder="Add Comment">
                          <input type="submit" value="Add Comment">
                        </form>
                    </div>
                    <br><hr>
                    <% if (post.comments.length) { %>
                      <% for (let i = post.comments.length - 1; i >= 0; i--) { %>
                          <span class="card-title">
                            <% if (user.avatar) { %>
                              <img src="<%= user.avatar %>" alt="" class="circle responsive-img">&nbsp;&nbsp;
                            <% } else { %>
                              <i class="small material-icons">perm_identity</i>
                            <% } %>                        
                          </span>
                          <h6><%= post.comments[i].username %></h6>
                          <p><%= post.comments[i].commentText %></p>
                          <p> Created on <%= post.comments[i].createdAt%></p>
                      <% } %>
                    <% } else { %>
                      <h6>No comments</h6>
                    <% } %>
                </div>
        </div>
    </main>
    
  </body>
</html>